---
const { headingStyle, headingText } = Astro.props;
---

<h2 data-style=`${headingStyle}`>{headingText}</h2>

<style>
  [data-style="yellow"] {
    font-family: var(--copy-font);
    inline-size: fit-content;
    border-radius: 1.25rem;
    padding: 0rem 0.9375rem;
    line-height: var(--lineheight-step-2);
    font-size: var(--font-size-step-1);
    letter-spacing: var(--letter-spacing-step-1);
    text-transform: uppercase;
    background: var(--secondary-color-2);
  }
  [data-style="green"] {
    font-family: var(--copy-font);
    inline-size: fit-content;
    border-radius: 1.25rem;
    padding: 0rem 0.9375rem;
    line-height: var(--lineheight-step-2);
    font-size: var(--font-size-step-1);
    letter-spacing: var(--letter-spacing-step-1);
    text-transform: uppercase;
    color: white;
    background: var(--secondary-color-3);
  }
</style>
