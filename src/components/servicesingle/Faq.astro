<style>
  section {
    > div {
      background: var(--site-bacgground-secondary-2-color);
      padding: 9cqi 14cqi;
      border-radius: 1.875rem;
    }

    article:first-child {
      display: grid;
      place-items: center;
      gap: 1.3rem;
    }
    article:last-child {
      margin-block-start: 2.5rem;
      display: grid;
      gap: 1.8rem;
      figure {
        background-image: url(/src/icons/minus_icon.svg);
        background-repeat: no-repeat;
        inline-size: 52px;
        block-size: 3px;
        align-self: center;
      }
    }

    details {
      border-bottom: 1px solid #dadada;
      padding-bottom: 1.69rem;

      &:not([open]) {
        figure {
          background-image: url(/src/icons/plus_icon.svg);
          background-repeat: no-repeat;
          inline-size: 52px;
          block-size: 20px;
        }
      }

      summary {
        display: flex;
        justify-content: space-between;
        cursor: pointer;

        p {
          font-size: var(--font-size-step-2);
          font-weight: var(--font-weight-step-0);
          color: var(--secondary-color-1);
        }
      }
    }
  }
  [data-icon] {
    inline-size: 1.07388rem;
    block-size: 1.07388rem;
  }
</style>
