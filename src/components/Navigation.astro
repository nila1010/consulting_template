---
import { Icon } from "astro-icon/components";
import Button from "./Button.astro";
const { focus } = Astro.props;
---

<section>
  <article>
    <div>
      <Icon name="opening_hour_nav_icon" />
      <p>Monday - Friday 8AM - 9PM</p>
    </div>
    <div>
      <Icon name="place_icon" />
      <p>725 Park Ave, New York</p>
    </div>
    <div>
      <Icon name="instagram" />
      <Icon name="facebook" />
      <Icon name="twitter" />
      <Icon name="linkedin" />
    </div>
  </article>
  <article>
    <div>
      <Icon name="ask_experts_icon" />
      <p>AskExperts</p>
    </div>
    <ul>
      <li class={focus}>About</li>
      <li>Service Single</li>
      <li>Team</li>
      <li>Case Study Single</li>
    </ul>

    <Button btnIcon="true" buttonStyle="white" text="+ (888) 452 1505" />
  </article>
</section>

<style>
  section {
    display: grid;
    background-color: var(--secondary-color-1);

    article:first-child {
      padding: 0.5rem;
      display: flex;
      justify-content: space-around;

      div {
        display: flex;
        align-items: center;
        gap: 0.6rem;
      }

      div:last-child {
        gap: 1.58rem;
        [data-icon] {
          width: 1.12375rem;
          height: 1.08131rem;
        }
      }
    }
    article p {
      font-size: 0.875rem;
      color: #fff;
    }

    article:last-child {
      padding: 1.5rem 2rem;
      display: flex;
      justify-content: space-around;
      align-items: center;

      background: rgb(62 61 61 / 91%);
      color: #fff;

      div {
        display: flex;
        gap: 0.3rem;
        p {
          font-size: 1.875rem;
        }
      }
      ul {
        padding: 0;
        display: flex;
        gap: 2.5rem;
        li {
          list-style: circle;
        }

        li:hover {
          color: var(--secondary-color-3);
          cursor: pointer;
          transition: all 0.3s ease;
        }
        .active {
          color: var(--secondary-color-3);
          list-style: unset;
        }
      }
      [data-icon] {
        width: 1.85869rem;
        height: 1.80669rem;
      }
    }
  }

  [data-icon="opening_hour_nav_icon"],
  [data-icon="place_icon"] {
    inline-size: 0.73644rem;
    block-size: 0.95738rem;
  }
</style>
