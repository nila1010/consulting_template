---
import { Icon } from "astro-icon/components";
const { bgColor, cta, cardContent, cardHeight } = Astro.props;
---

<section class="full-width-grid">
  {
    cardContent.map((card) => (
      <article data-style={bgColor} data-cardheight={cardHeight} class="flow-space card">
        <Icon name={card.iconPath} />
        <h3>{card.heading}</h3>
        <p>{card.text}</p>
        {cta === "true" && (
          <div>
            <a href="">{card.ctaText}</a>
            <Icon name="arrow" />
          </div>
        )}
      </article>
    ))
  }
</section>

<style>
  section {
    container: main / inline-size;
    margin-block-start: 3rem;
    display: flex;
    gap: 2rem;
    padding-inline: max(2rem, 50% - var(--content) / 2);
    overflow: auto;
    > * {
      flex: 1 0 16rem;
    }
  }
  [data-style="gray"] {
    background-color: #ebebeb;
  }
  [data-style="white"] {
    background-color: #fff;
  }

  [data-cardheight="small"] {
    flex: 1 0 21rem;
  }

  article {
    --space: 1.38rem;
    border-radius: 1.25rem;
    padding: 2.25rem 1.44rem;
    div {
      inline-size: fit-content;
      display: flex;
      gap: 0.5rem;
      align-items: center;
    }

    div:hover {
      [data-icon="arrow"],
      a {
        color: var(--secondary-color-2);
      }
    }

    a {
      text-decoration: none;
      color: var(--secondary-color-1);
      font-size: var(--font-size-step-2);
      font-weight: var(--font-weight-step-1);
      line-height: var(--lineheight-step-3);
    }
    p,
    div {
      --space: 0.94rem;
    }
  }

  [data-icon] {
    width: 3.29863rem;
    height: 3.29863rem;
  }

  [data-icon="arrow"] {
    inline-size: 0.81675rem;
    block-size: 0.66825rem;
  }

  @container main (width < 500px) {
    [data-cardheight="small"] {
      flex: 1 0 16rem;
    }
  }
</style>
