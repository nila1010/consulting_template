---
import { Icon } from "astro-icon/components";
const { text, buttonStyle, btnIcon, btnSize } = Astro.props;
---

<button data-size={btnSize} data-style={buttonStyle}>
  {
    btnIcon === "true" && (
      <figure>
        <Icon name="phone_icon" />
      </figure>
    )
  }{text}</button
>

<style>
  button {
    display: flex;
    align-items: center;
    gap: 1rem;
    border-radius: 3rem;
    min-inline-size: fit-content;
    padding: 0.9375rem 2.125rem;
    font-weight: var(--font-weight-step-1);
    line-height: var(--lineheight-step-3);
    font-size: var(--font-size-step-2);
  }
  [data-style="black"] {
    background: var(--secondary-color-1);
    color: #fff;

    &:hover {
      color: var(--secondary-color-2);
    }
  }
  [data-style="yellow"] {
    background: var(--secondary-color-2);
    color: var(--secondary-color-1);

    &:hover {
      color: #fff;
    }
  }
  [data-style="white"] {
    background: #fff;
    color: var(--secondary-color-1);

    &:hover {
      color: var(--secondary-color-3);
    }
  }
  [data-style="green"] {
    background: var(--secondary-color-3);
    color: #fff;

    &:hover {
      color: var(--secondary-color-2);
    }
  }
  [data-icon] {
    inline-size: 1.35056rem;
    block-size: 1.35056rem;
  }
  [data-size="small"] {
    font-size: var(--font-size-step-1);
    padding: 0.5rem 1.125rem;
    gap: 0.5rem;
    [data-icon] {
      inline-size: 1rem;
      block-size: 1rem;
    }
  }
</style>
